{
    "zinq" : [
        {
            "name" : "quantum_dynamics",
            "options" : {
                "grid" : {
                    "limits" : [[-8, 8], [-8, 8]],
                    "points" : 128
                },
                "initial_conditions" : {
                    "adiabatic" : true,
                    "mass" : 1,
                    "momentum" : [0, 0],
                    "position" : [2, 2],
                    "state" : 1,
                    "gamma" : [2, 2]
                },
                "log_intervals" : {
                    "iteration" : 100
                },
                "potential" : {
                    "custom" : {
                        "variables" : ["x", "y"],
                        "matrix" : [
                            ["x+0.5*(x^2+y^2)", "y"],
                            ["y", "0.5*(x^2+y^2)-x"]
                        ]
                    }
                },
                "write" : {
                    "wavefunction" : "WAVEFUNCTION_EXACT.mat",
                    "population" : "POPULATION_EXACT.mat"
                },
                "adiabatic" : true,
                "iterations" : 1000,
                "time_step" : 0.01
            }
        }
    ]
}
